@startuml
node "Docker Host" {
  [Eureka Server Container]
  [Config Server Container]
  [API Gateway Container]
  [User Service Container]
  [Account Service Container]
  [Fund Transfer Service Container]
  [Transaction Service Container]
  [Notification Service Container]
  [Orchestration Service Container]
  [Monitor Service Container]
  [Security Service Container]
  [Circuit Breaker Service Container]
  [Kafka Container]
  [MySQL Container]
  [Cassandra Container]
  [Prometheus Container]
  [Jaeger Container]
}

[Eureka Server Container] --> [MySQL Container] : uses
[Config Server Container] --> [MySQL Container] : uses
[User Service Container] --> [MySQL Container] : uses
[Account Service Container] --> [MySQL Container] : uses
[Fund Transfer Service Container] --> [MySQL Container] : uses
[Transaction Service Container] --> [Cassandra Container] : uses
[Notification Service Container] --> [MySQL Container] : uses
[Orchestration Service Container] --> [MySQL Container] : uses

[API Gateway Container] --> [Eureka Server Container] : discovers services
[User Service Container] --> [Eureka Server Container] : registers
[Account Service Container] --> [Eureka Server Container] : registers
[Fund Transfer Service Container] --> [Eureka Server Container] : registers
[Transaction Service Container] --> [Eureka Server Container] : registers
[Notification Service Container] --> [Eureka Server Container] : registers
[Orchestration Service Container] --> [Eureka Server Container] : registers

[User Service Container] --> [Config Server Container] : fetches config
[Account Service Container] --> [Config Server Container] : fetches config
[Fund Transfer Service Container] --> [Config Server Container] : fetches config
[Transaction Service Container] --> [Config Server Container] : fetches config
[Notification Service Container] --> [Config Server Container] : fetches config
[Orchestration Service Container] --> [Config Server Container] : fetches config

[Kafka Container] --> "Microservices" : event bus
[Prometheus Container] --> [Monitor Service Container] : scrapes metrics
[Jaeger Container] --> "Microservices" : traces
@enduml